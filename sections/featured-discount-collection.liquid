                            <span class="countdown-days">
                              <span class="cd_timet4 t4s-cd-number">%-D</span>
                              <span class="cd_txtt4 t4s-cd-text">{{ "products.product_card.countdown_text.day_plural" | t }} </span>
                            </span>
                            <span class="countdown-hours">
                              <span class="cd_timet4 t4s-cd-number">%H</span>
                              <span class="cd_txtt4 t4s-cd-text">{{ "products.product_card.countdown_text.hr_plural" | t }} </span>
                            </span>
                            <span class="countdown-min">
                              <span class="cd_timet4 t4s-cd-number">%M</span> 
                              <span class="cd_txtt4 t4s-cd-text">{{ "products.product_card.countdown_text.min_plural" | t }} </span>
                            </span>
                            <span class="countdown-sec">
                              <span class="cd_timet4 t4s-cd-number">%S</span> 
                              <span class="cd_txtt4 t4s-cd-text">{{ "products.product_card.countdown_text.sec_plural" | t }} </span>
                            </span>
                          </div>
                        {%- else -%}
                          <div class="t4s-countdown-time" data-countdown-t4s data-date='{{ bk_stts.date }}'>
                            <span class="countdown-days">
                              <span class="cd_timet4 t4s-cd-number">%-D{{ "products.product_card.countdown_text.day" | t }} </span>
                            </span>
                            <span class="countdown-hours">
                              <span class="cd_timet4 t4s-cd-number"> : %H{{ "products.product_card.countdown_text.hr" | t }} </span>
                            </span>
                            <span class="countdown-min">
                              <span class="cd_timet4 t4s-cd-number"> : %M{{ "products.product_card.countdown_text.min" | t }} </span>
                            </span>
                            <span class="countdown-sec">
                              <span class="cd_timet4 t4s-cd-number"> : %S{{ "products.product_card.countdown_text.sec" | t }}</span>
                            </span>
                          </div>
                        {%- endif -%}
                      </div>
                    {%- endcapture -%}
                  {% endif %}
                {%-assign pr_url = product.url | within: se_blocks %}
                {%- case product_des  -%}
                  {%- when '1'  -%}
                    {%- render 'pr-discount-item1', product: product, isGrowaveWishlist: isGrowaveWishlist, show_img: show_img, show_vendor: show_vendor, use_link_vendor: use_link_vendor, enable_rating: enable_rating, enable_pr_color: enable_pr_color, show_cl_type: show_cl_type, get_color: get_color, enable_pr_size: enable_pr_size, pr_size_pos: pr_size_pos, get_size: get_size, show_size_type: show_size_type, price_varies_style: price_varies_style, app_review: app_review, use_countdown: use_countdown, imgatt: imgatt, show_list_btns: false, placeholder_img: placeholder_img, append_stock: append_stock, pr_countdown: pr_countdown, pr_badge: pr_badge -%}
                  {%- when '2'  -%}
                    {%- render 'pr-discount-item2', product: product, isGrowaveWishlist: isGrowaveWishlist, show_img: show_img, show_vendor: show_vendor, use_link_vendor: use_link_vendor, enable_rating: enable_rating, enable_pr_color: enable_pr_color, show_cl_type: show_cl_type, get_color: get_color, enable_pr_size: enable_pr_size, pr_size_pos: pr_size_pos, get_size: get_size, show_size_type: show_size_type, price_varies_style: price_varies_style, pp_review: app_review, use_countdown: use_countdown, show_list_btns: false, append_stock: append_stock, pr_countdown: pr_countdown, pr_badge: pr_badge -%}
                {%- endcase -%}
              {%- endfor -%}
            {%- else -%} 
              {%- for i in (1..8) limit: limit -%}
                <div class="t4s-col-item t4s-product t4s-pr-grid t4s-pr-style1 t4s-pr-discount pr-{{ se_stts.content_align }}">
                  <div class="t4s-product-wrapper">
                    <div class="t4s-row t4s-align-items-center t4s-row-cols-lg-2 t4s-row-cols-md-2 t4s-row-cols-1">
                      <div class="t4s-col-item">
                        <div class="t4s-product-inner">
                          <a class="db" href="/admin/products">{%- capture current -%}  {%- cycle 1, 2, 3, 4, 5, 6 -%}  {%- endcapture -%} {{ 'product-' | append: current | placeholder_svg_tag: 't4s-placeholder-svg' }}</a>
                        </div>
                      </div>
                      <div class="t4s-col-item">
                        <div class="t4s-product-info">
                          <h3 class="t4s-product-title"><a href="/admin/products">{{ 'onboarding.product_title' | t }}</a></h3>
                          <span class="t4s-product-price"><del>$59.00</del><ins>$39.00</ins></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  {%- assign sold = bk_stts.total | minus: bk_stts.available | times: 100 | divided_by: bk_stts.total | ceil -%}
                  {% if se_stts.show_stock_bar %}
                    {%- capture append_stock -%}
                      <div class="loop-t4s-pr-stock"  style="--stock-cl1: {{ se_stts.cl_stock_1 }};--stock-cl2: {{ se_stts.cl_stock_2 }}">
                        <div class="status-bar">
                           <div class="sold-bar" style="width: {{ sold }}%"></div>
                        </div>
                        <div class="t4s-pr-stock-status">
                          <div class="sold"> <span class="label">{{ txt_sold }} </span> <span class="value">{{ bk_stts.total | minus: bk_stts.available }}<span></span></span></div>
                          <div class="available"> <span class="label">{{ txt_avai }} </span> <span class="value">{{ bk_stts.available }}<span></span></span></div>
                        </div>
                      </div>
                    {%- endcapture -%}
                  {% endif %}
                </div>
              {%- endfor -%}
            {%- endif -%}
          </div>
      {% if heading_inline %}
        </div>
      {% endif %}
  {{- html_layout[1] -}}
</div>
