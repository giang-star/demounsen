                           <div class="sold-bar" style="width: {{ sold }}%"></div>
                        </div>
                        <div class="t4s-pr-stock-status">
                          <div class="available"> <span class="label">{{ txt_avai }} </span> <span class="value">{{ bk_stts.available }}<span></span></span></div>
                          <div class="sold">
                            <span class="label">{{ txt_sold }} </span> <span class="value">{{ bk_stts.total | minus: bk_stts.available }}<span></span></span>
                          </div>
                        </div>
                      </div>
                    {%- endcapture -%}
                  {% endif %}
                  {%- if bk_stts.date != blank -%} 
                    {%- assign cd_title = bk_stts.cd_title -%}
                    {%- assign cd_subtitle = bk_stts.cd_subtitle -%}
                    {%- capture pr_countdown -%}
                      <div class="t4s-pr-countdown" style="--cd-cl1: {{ se_stts.pr_cd_1 }};--cd-cl2: {{ se_stts.pr_cd_2 }}">
                        {%- if cd_title != blank or cd_subtitle != blank -%}
